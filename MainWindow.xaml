<Window x:Class="CEFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CEFDemo"
        Title="MainWindow"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <wpf:ChromiumWebBrowser x:Name="webBrowser"
                                Grid.Row="0"></wpf:ChromiumWebBrowser>
        <wpf:ChromiumWebBrowser Grid.Row="1"
                                Address="http://www.bongiovi.tw/experiments/webgl/blossom/" />
    </Grid>
</Window>
